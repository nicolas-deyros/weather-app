<!-- Quick Location Test Buttons -->
<div class="mx-auto mb-8 max-w-4xl">
	<h2 class="mb-6 text-center text-2xl font-bold text-white">
		🌍 Test Different Locations
	</h2>
	<div class="mb-6 grid grid-cols-2 gap-4 md:grid-cols-4">
		<button
			onclick="loadWeather(40.7128, -74.0060, 'New York')"
			class="cursor-pointer rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="mb-2 text-2xl">🗽</div>
			<div class="font-semibold">New York</div>
			<div class="text-sm opacity-75">40.71, -74.01</div>
		</button>

		<button
			onclick="loadWeather(35.6762, 139.6503, 'Tokyo')"
			class="cursor-pointer rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="mb-2 text-2xl">🗾</div>
			<div class="font-semibold">Tokyo</div>
			<div class="text-sm opacity-75">35.68, 139.65</div>
		</button>

		<button
			onclick="loadWeather(-33.8688, 151.2093, 'Sydney')"
			class="cursor-pointer rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="mb-2 text-2xl">🦘</div>
			<div class="font-semibold">Sydney</div>
			<div class="text-sm opacity-75">-33.87, 151.21</div>
		</button>

		<button
			onclick="loadWeather(48.8566, 2.3522, 'Paris')"
			class="cursor-pointer rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="mb-2 text-2xl">🇫🇷</div>
			<div class="font-semibold">Paris</div>
			<div class="text-sm opacity-75">48.86, 2.35</div>
		</button>
	</div>
</div>
