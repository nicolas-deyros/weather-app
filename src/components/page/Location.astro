---
import { Icon } from 'astro-icon/components'
---

<div class="mx-auto mb-8 max-w-4xl lg:mx-0 lg:max-w-none">
	<h2
		class="mb-6 flex items-center-safe justify-center-safe gap-2 text-2xl font-bold text-white">
		<Icon name="twemoji:world-map" />Try Different Locations
	</h2>
	<div class="mb-6 grid grid-cols-2 gap-4 lg:grid-cols-2 xl:grid-cols-2">
		<button
			onclick="loadWeather(40.7128, -74.0060, 'New York')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl">
				<Icon name="twemoji:american-football" />
			</div>
			<div class="font-semibold">New York</div>
		</button>

		<button
			onclick="loadWeather(35.6762, 139.6503, 'Tokyo')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl"><Icon name="twemoji:sushi" /></div>
			<div class="font-semibold">Tokyo</div>
		</button>

		<button
			onclick="loadWeather(-33.8688, 151.2093, 'Sydney')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl"><Icon name="twemoji:boomerang" /></div>
			<div class="font-semibold">Sydney</div>
		</button>

		<button
			onclick="loadWeather(48.8566, 2.3522, 'Paris')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl"><Icon name="twemoji:croissant" /></div>
			<div class="font-semibold">Paris</div>
		</button>

		<button
			onclick="loadWeather(ï»¿-34.5997, -58.4416, 'Buenos Aires')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl"><Icon name="twemoji:mate" /></div>
			<div class="font-semibold">Buenos Aires</div>
		</button>

		<button
			onclick="loadWeather(-23.5475, -46.6361, 'Rio de Janeiro')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl"><Icon name="twemoji:flag-brazil" /></div>
			<div class="font-semibold">Brazil</div>
		</button>

		<button
			onclick="loadWeather(-30.559482,  22.937, 'South Africa')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl">
				<Icon name="twemoji:globe-showing-europe-africa" />
			</div>
			<div class="font-semibold">South Africa</div>
		</button>

		<button
			onclick="loadWeather(35.8617, 104.1954, 'Hong Kong')"
			class="flex cursor-pointer flex-col items-center gap-2 rounded-lg bg-white/20 p-4 text-center text-white shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/30">
			<div class="text-2xl"><Icon name="twemoji:panda" /></div>
			<div class="font-semibold">Hong Kong</div>
		</button>
	</div>
</div>
