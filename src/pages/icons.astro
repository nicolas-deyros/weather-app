		<style>
			/* Custom Tailwind animations - extending Tailwind's built-in animations */
			@keyframes rainDrop {
				0%,
				100% {
					transform: translateY(0px);
				}
				50% {
					transform: translateY(-10px);
				}
			}

			@keyframes snowFloat {
				0%,
				100% {
					transform: translateY(0px) rotate(0deg);
				}
				33% {
					transform: translateY(-8px) rotate(120deg);
				}
				66% {
					transform: translateY(-4px) rotate(240deg);
				}
			}

			@keyframes thunderPulse {
				0%,
				100% {
					transform: scale(1);
					opacity: 1;
				}
				25% {
					transform: scale(1.1);
					opacity: 0.8;
				}
				50% {
					transform: scale(1.05);
					opacity: 1;
				}
				75% {
					transform: scale(1.15);
					opacity: 0.7;
				}
			}

			@keyframes partlyCloudyDrift {
				0%,
				100% {
					transform: translateX(0px) translateY(0px);
				}
				33% {
					transform: translateX(-3px) translateY(-2px);
				}
				66% {
					transform: translateX(3px) translateY(-1px);
				}
			}

			@keyframes fogSwirl {
				0%,
				100% {
					transform: translateX(0px);
					opacity: 0.8;
				}
				50% {
					transform: translateX(-5px);
					opacity: 1;
				}
			}

			@keyframes windSway {
				0%,
				100% {
					transform: translateX(0px) rotate(0deg);
				}
				25% {
					transform: translateX(-8px) rotate(-5deg);
				}
				50% {
					transform: translateX(8px) rotate(5deg);
				}
				75% {
					transform: translateX(-4px) rotate(-2deg);
				}
			}

			@keyframes hailBounce {
				0%,
				100% {
					transform: translateY(0px);
				}
				25% {
					transform: translateY(-8px);
				}
				50% {
					transform: translateY(-4px);
				}
				75% {
					transform: translateY(-12px);
				}
			}

			/* Apply animations as utility classes */
			.animate-rain-drop {
				animation: rainDrop 1.5s ease-in-out infinite;
			}
			.animate-snow-float {
				animation: snowFloat 3s ease-in-out infinite;
			}
			.animate-snow-fast {
				animation: snowFloat 2s ease-in-out infinite;
			}
			.animate-thunder-pulse {
				animation: thunderPulse 1s ease-in-out infinite;
			}
			.animate-partly-cloudy {
				animation: partlyCloudyDrift 2.5s ease-in-out infinite;
			}
			.animate-partly-cloudy-slow {
				animation: partlyCloudyDrift 3s ease-in-out infinite;
			}
			.animate-fog-swirl {
				animation: fogSwirl 4s ease-in-out infinite;
			}
			.animate-wind-sway {
				animation: windSway 2s ease-in-out infinite;
			}
			.animate-hail-bounce {
				animation: hailBounce 1.2s ease-in-out infinite;
			}
		</style>
	</head>
