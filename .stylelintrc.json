{
	"extends": ["stylelint-config-standard"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind",
					"apply",
					"variants",
					"responsive",
					"screen",
					"layer"
				]
			}
		],

		"no-descending-specificity": null,
		"selector-class-pattern": null,
		"custom-property-pattern": null
	},
	"ignoreFiles": [
		"dist/**/*",
		"src/styles/*",
		".vercel/**/*",
		".astro/**/*",
		"node_modules/**/*"
	]
}
