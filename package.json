{
	"name": "weather-app",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev --port 3001 --open",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint . --ext .js,.ts,.astro,.jsx,.tsx --fix",
		"lint:css": "stylelint \"src/**/*.css\" --fix",
		"lint:all": "npm run lint && npm run lint:css",
		"test": "vitest run test/utils.test.ts",
		"test:unit": "vitest run test/utils.test.ts",
		"test:integration": "start-server-and-test dev http://localhost:3001 \"vitest run test/api.test.ts test/frontend.test.ts\"",
		"test:api": "start-server-and-test dev http://localhost:3001 \"vitest run test/api.test.ts\"",
		"test:frontend": "start-server-and-test dev http://localhost:3001 \"vitest run test/frontend.test.ts\"",
		"test:utils": "vitest run test/utils.test.ts",
		"test:watch": "vitest --watch test/utils.test.ts",
		"test:all": "npm run test:unit && npm run test:integration",
		"test:coverage": "vitest --coverage test/utils.test.ts"
	},
	"lint-staged": {
		"*.{js,ts,astro,jsx,tsx}": [
			"eslint --fix"
		],
		"*.css": [
			"stylelint --fix"
		],
		"*.{js,ts,astro,jsx,tsx,css,json,md}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@astrojs/vercel": "^8.2.5",
		"@tailwindcss/vite": "^4.1.11",
		"astro": "^5.12.6",
		"astro-icon": "^1.1.5",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@iconify-json/devicon-plain": "^1.2.34",
		"@iconify-json/meteocons": "^1.2.2",
		"@iconify-json/nrk": "^1.2.5",
		"@iconify-json/twemoji": "^1.2.2",
		"commitlint-plugin-function-rules": "^4.0.2",
		"cross-env": "^10.0.0",
		"eslint": "^9.32.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"start-server-and-test": "^2.0.12",
		"stylelint": "^16.23.0",
		"stylelint-config-standard": "^39.0.0",
		"tsx": "^4.20.3",
		"typescript-eslint": "^8.38.0",
		"vitest": "^3.2.4"
	}
}
